/* ---------------- Rendering ---------------- */
const jobsGrid = document.getElementById('jobsGrid');
const resultsCount = document.getElementById('resultsCount');
let selectedJob = null;

function renderJobs(list){
  jobsGrid.innerHTML = '';
  list.forEach(job => {
    const logo = svgDataUri(job.company, job.color || '#94a3b8');
    const card = document.createElement('div');
    card.className = 'job-card';
    card.innerHTML = `
      <div class="logo"><img src="${logo}" alt="${job.company}"></div>
      <div class="job-info">
        <div class="job-title">${job.title}</div>
        <div class="job-meta">${job.company} • ${job.location}</div>
        <div class="badges"><span class="badge">${job.type}</span></div>
      </div>
    `;
    card.onclick = () => openModal(job, logo);
    jobsGrid.appendChild(card);
  });
  resultsCount.textContent = list.length;
}

/* ---------------- Show initial ---------------- */
renderJobs(jobs);

/* ---------------- Open/close and modal actions ---------------- */
function openJobs(){
  document.getElementById('homeScreen').style.display = 'none';
  document.getElementById('jobPage').style.display = 'block';
  window.scrollTo({top:0,behavior:'smooth'});
}

function openModal(job, logo){
  selectedJob = job;
  document.getElementById('mTitle').textContent = job.title;
  document.getElementById('mMeta').textContent = ${job.company} • ${job.location} • ${job.type};
  document.getElementById('mDesc').textContent = job.desc;
  document.getElementById('mLogo').innerHTML = <img src="${logo}" style="width:64px;height:64px;border-radius:8px">;
  document.getElementById('appName').value = '';
  document.getElementById('appEmail').value = '';
  document.getElementById('appNote').value = '';
  document.getElementById('modal').style.display = 'flex';
}

function closeModal(){
  document.getElementById('modal').style.display = 'none';
}

/* ---------------- Applications (localStorage) ---------------- */
function submitApplication(){
  const name = document.getElementById('appName').value.trim();
  const email = document.getElementById('appEmail').value.trim();
  const note = document.getElementById('appNote').value.trim();
  if(!name || !email){
    alert('Please enter your name and email.');
    return;
  }

  const applied = JSON.parse(localStorage.getItem('applied_jobs') || '[]');
  // prevent duplicate applications by same email + job
  const exists = applied.find(a => a.title === selectedJob.title && a.company === selectedJob.company && a.email === email);
  if(exists){
    alert('You already applied for this job with this email.');
    return;
  }

  applied.push({
    title: selectedJob.title,
    company: selectedJob.company,
    location: selectedJob.location,
    type: selectedJob.type,
    applicant: name,
    email,
    note,
    appliedAt: new Date().toISOString()
  });

  localStorage.setItem('applied_jobs', JSON.stringify(applied));
  closeModal();
  loadApplied();
  alert('Application submitted and saved locally.');
}

/* ---------------- Applied list ---------------- */
function loadApplied(){
  const list = JSON.parse(localStorage.getItem('applied_jobs') || '[]');
  const container = document.getElementById('appliedList');
  container.innerHTML = '';
  if(list.length === 0){
    container.innerHTML = '<div style="color:var(--muted)">No applications yet.</div>';
    return;
  }
  list.forEach((a, i) => {
    const logo = svgDataUri(a.company,'#94a3b8');
    const item = document.createElement('div');
    item.className = 'applied-item';
    item.innerHTML = `
      <div style="width:56px;flex:0 0 56px"><img src="${logo}" style="width:56px;height:56px;border-radius:8px"></div>
      <div style="flex:1">
        <div style="font-weight:700">${a.title} — ${a.company}</div>
        <small>${a.applicant} • ${a.email}</small><br>
        <small style="color:var(--muted)">Applied: ${new Date(a.appliedAt).toLocaleString()}</small>
      </div>
      <div style="display:flex;flex-direction:column;gap:8px">
        <button style="background:#fff;color:var(--primary);border:1px solid rgba(11,18,32,0.06);padding:8px 10px;border-radius:8px;cursor:pointer" onclick="viewApplication(${i})">View</button>
        <button style="background:#ef4444;color:#fff;border:none;padding:8px 10px;border-radius:8px;cursor:pointer" onclick="cancelApplication(${i})">Cancel</button>
      </div>
    `;
    container.appendChild(item);
  });
}

function viewApplication(i){
  const list = JSON.parse(localStorage.getItem('applied_jobs') || '[]');
  const a = list[i];
  if(!a) return;
  // open modal with values prefilled
  selectedJob = {title:a.title, company:a.company, location:a.location, type:a.type, desc: a.note || ''};
  openModal(selectedJob, svgDataUri(a.company,'#94a3b8'));
  document.getElementById('appName').value = a.applicant;
  document.getElementById('appEmail').value = a.email;
  document.getElementById('appNote').value = a.note;
}

function cancelApplication(i){
  if(!confirm('Cancel this application?')) return;
  const list = JSON.parse(localStorage.getItem('applied_jobs') || '[]');
  list.splice(i,1);
  localStorage.setItem('applied_jobs', JSON.stringify(list));
  loadApplied();
}

/* ---------------- Filtering ---------------- */
function filterJobs(){
  const q = document.getElementById('search').value.trim().toLowerCase();
  const loc = document.getElementById('location').value.trim().toLowerCase();
  const type = document.getElementById('type').value;
  const filtered = jobs.filter(j => {
    return (q === '' || j.title.toLowerCase().includes(q) || j.company.toLowerCase().includes(q))
      && (loc === '' || j.location.toLowerCase().includes(loc))
      && (type === '' || j.type === type);
  });
  renderJobs(filtered);
}

function resetFilters(){
  document.getElementById('search').value = '';
  document.getElementById('location').value = '';
  document.getElementById('type').value = '';
  renderJobs(jobs);
}

/* ---------------- Init ---------------- */
loadApplied();
</script>
</body>
