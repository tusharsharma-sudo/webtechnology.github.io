<script>
/* ---------------- Utilities ---------------- */
function svgDataUri(text, bg){
  // create 2-letter initials
  const initials = text.split(/\s+/).map(w=>w[0]).slice(0,2).join('').toUpperCase();
  const svg = <svg xmlns='http://www.w3.org/2000/svg' width='120' height='120'><rect rx='18' width='100%' height='100%' fill='${bg}'/><text x='50%' y='54%' dominant-baseline='middle' text-anchor='middle' font-family='Arial,Helvetica,sans-serif' font-size='46' fill='white'>${initials}</text></svg>;
  return 'data:image/svg+xml;utf8,'+encodeURIComponent(svg);
}

/* ---------------- Jobs dataset (24 jobs) ---------------- */
const jobs = [
  {title:"Frontend Developer", company:"NovaSoft", location:"Bengaluru", type:"Full-time", desc:"Build modern UI components using React." , color:'#2563eb'},
  {title:"Backend Developer", company:"CloudWave", location:"Remote", type:"Full-time", desc:"Design and maintain backend services.", color:'#0ea5a4'},
  {title:"Full Stack Engineer", company:"StackForge", location:"Hyderabad", type:"Full-time", desc:"Work across frontend and backend.", color:'#ef4444'},
